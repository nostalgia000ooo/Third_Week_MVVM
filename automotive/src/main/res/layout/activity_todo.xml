<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/background_light"
        tools:context=".ui.TodoActivity">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的待办事项"
                android:textSize="28sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageButton
                android:id="@+id/showInputButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/fab_background"
                android:elevation="6dp"
                android:layout_marginStart="16dp"
                android:contentDescription="添加待办事项" />

        </LinearLayout>

        <!-- 添加输入框容器 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加新的待办事项"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/todoEditText"
                    style="@style/CustomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入待办事项内容..."
                    android:inputType="text"
                    android:layout_marginBottom="16dp"
                    android:minHeight="48dp" />

                <Button
                    android:id="@+id/addButton"
                    style="@style/PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="添加待办事项"
                    android:minHeight="48dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 待办事项列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/todoRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            tools:itemCount="4"
            tools:listitem="@layout/item_todo"/>

        <!-- 手势提示 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/primary_blue_light"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/gestureHintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示: 向上滑动显示添加框，向下滑动隐藏"
                android:textSize="14sp"
                android:textColor="@color/primary_blue_dark"
                android:gravity="center"
                android:padding="12dp"
                android:fontFamily="sans-serif" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
